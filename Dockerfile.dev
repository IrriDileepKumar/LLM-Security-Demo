FROM python:3.11-slim

WORKDIR /app

# Install Node.js 22 and development tools
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    gnupg2 \
    && curl -fsSL https://deb.nodesource.com/setup_22.x | bash - \
    && apt-get install -y --no-install-recommends nodejs \
    && npm install -g npm@latest \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Copy and install Python requirements
COPY ./requirements.txt .
RUN pip install -r requirements.txt
COPY ./backend/ ./backend/
COPY ./scripts/ ./scripts/
RUN python backend/scripts/precompute_common_word_embeddings.py || echo "⚠️ Precompute cache step failed"
RUN pip install watchdog

# Copy package files only (for dependency caching)
COPY ./frontend/package*.json ./frontend/

# Install frontend dependencies
WORKDIR /app/frontend
RUN npm install

WORKDIR /app

# Set environment variables
ENV PYTHONPATH=/app:/app/backend
ENV ENVIRONMENT=development
ENV NODE_ENV=development

# Expose ports
EXPOSE 5000 3000

# Make startup script executable and use it
RUN chmod +x /app/scripts/docker-dev-start.sh

# Start both dev servers with proper health check sequencing
CMD ["/app/scripts/docker-dev-start.sh"]
